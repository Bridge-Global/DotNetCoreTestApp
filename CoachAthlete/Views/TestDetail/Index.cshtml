@model IEnumerable<CoachAthlete.Entities.TestDetail>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<p>
    <a asp-action="Create">Add New Athlete</a> &nbsp;&nbsp;&nbsp;&nbsp;
    <a asp-controller="TestHeader" asp-action="Index">Back to List</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DistanceOrTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestHeaderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Athlete)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DistanceOrTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TestHeader.TestHeaderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Athlete.UserName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SlNo">Edit</a> |
                @*<a asp-action="Details" asp-route-id="@item.SlNo">Details</a> |*@
                <a asp-action="Delete" asp-route-id="@item.SlNo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
